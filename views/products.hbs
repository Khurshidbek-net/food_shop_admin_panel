    background-color: #f8f9fa;
    font-family: "Arial", sans-serif; /* Updated to Arial for a cleaner, modern look */
  }
  *{
    margin: 0;
    padding: 0;
  }

  .table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    background-color: #ffffff;
    border: 1px solid #dee2e6;
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .table th {
    width: 300px;
    background-color: #007bff;
    color: white;
    text-align: center;
    font-weight: bold;
    border: 1px solid #dee2e6;
  }

  .table td {
    text-align: center;
    border: 1px solid #dee2e6;
  }

  .table-striped tbody tr:nth-child(odd) {
    background-color: #f8f9fa;
  }

  .table-striped tbody tr:nth-child(even) {
    background-color: #e9ecef;
  }

  .table-striped tbody tr:hover {
    background-color: #d1e7dd;
    transition: background-color 0.3s ease-in-out;
  }

  .modal-content {
    border-radius: 1rem;
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
  }

  .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
  }

  .btn-primary:hover {
    background-color: #0069d9;
    border-color: #0062cc;
  }

  .btn-danger {
    background-color: #dc3545;
    border-color: #dc3545;
  }

  .btn-danger:hover {
    background-color: #c82333;
    border-color: #b92133;
  }

  /* Adjust action button styles */
  .btn {
    padding: 0.5rem 1rem;
    font-size: 1rem; /* Increase font size */
  }

  /* Increase font size for table headers and cells */
  .table th, .table td {
    font-size: 1.1rem; /* Larger text for better readability */
  }

  /* Add padding and margin adjustments to modal */
  .modal-body form {
    padding: 1.5rem;
  }
